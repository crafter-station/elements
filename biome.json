{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [":BUN:", ":NODE:"],
              ":BLANK_LINE:",
              ["react", "react/**", "next", "next/**"],
              ":BLANK_LINE:",
              [":PACKAGE:"],
              ":BLANK_LINE:",
              ["@/trigger", "@/trigger/**"],
              ":BLANK_LINE:",
              ["@/db", "@/db/**"],
              ":BLANK_LINE:",
              ["@/lib", "@/lib/**"],
              ":BLANK_LINE:",
              ["@/components", "@/components/**"],
              ":BLANK_LINE:",
              ["@/hooks", "@/hooks/**"]
            ]
          }
        }
      }
    }
  }
}
