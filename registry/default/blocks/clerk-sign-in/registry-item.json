{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "clerk-sign-in",
  "type": "registry:ui",
  "title": "Clerk Sign In",
  "description": "Sign-in page using Clerk's built-in SignIn component",
  "registryDependencies": [
    "button",
    "card",
    "avatar",
    "@elements/clerk-middleware"
  ],
  "dependencies": ["@clerk/nextjs", "@clerk/themes"],
  "files": [
    {
      "path": "registry/default/blocks/clerk-sign-in/page.tsx",
      "type": "registry:page",
      "target": "app/sign-in/[[...sign-in]]/page.tsx"
    },
    {
      "path": "registry/default/blocks/clerk-sign-in/page.tsx",
      "type": "registry:page",
      "target": "app/dashboard/page.tsx"
    }
  ],
  "envVars": {
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY": "pk_test_",
    "CLERK_SECRET_KEY": "sk_test_",
    "NEXT_PUBLIC_CLERK_SIGN_IN_URL": "/sign-in",
    "NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL": "/dashboard",
    "NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL": "/dashboard"
  },
  "docs": "Sign-in page using Clerk's built-in SignIn component. Requires ClerkProvider in root layout."
}
